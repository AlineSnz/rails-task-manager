
<%= form_for(@task) do |task| %>
  <div class="form-group">
    <%= task.label :name %>
    <%= task.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= task.label :address %>
    <%= task.text_field :address, class: 'form-control' %>
  </div>

  <%= task.submit class: 'btn btn-primary' %>
<% end %>

